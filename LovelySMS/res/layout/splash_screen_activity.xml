<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dialog_background"
    android:gravity="center"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/title_hblab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/hblab_tranferent" />

    <ImageView
        android:id="@+id/ivAnima"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dip"
        android:contentDescription="@string/anim" />

    <ProgressBar
        android:id="@+id/progress_bar_splash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dip"
        android:background="@drawable/custom_progessbar" />

</LinearLayout>